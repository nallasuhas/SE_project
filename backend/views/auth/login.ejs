<section
  class="login flex justify-center items-center min-h-screen bg-cover bg-center relative"
  style="
    background-image: url('https://images.unsplash.com/photo-1513104890138-7c749659a591?ixlib=rb-1.2.1&ixid=MnwxMjA3fDB8MHxwaG90by1wYWdlfHx8fGVufDB8fHx8&auto=format&fit=crop&w=2070&q=80');
  "
>
  <!-- Animated elements -->
  <img
    src="/api/placeholder/100/100"
    alt="Pizza 1"
    class="absolute w-16 h-16 top-[10%] right-[10%] animate-bounce delay-0"
  />
  <img
    src="/api/placeholder/100/100"
    alt="Pizza 2"
    class="absolute w-16 h-16 top-[20%] left-[15%] animate-bounce delay-1000"
  />
  <img
    src="/api/placeholder/100/100"
    alt="Pizza 3"
    class="absolute w-16 h-16 bottom-[25%] right-[20%] animate-bounce delay-2000"
  />
  <img
    src="/api/placeholder/100/100"
    alt="Delivery Scooter"
    class="absolute bottom-12 -left-24 w-24 h-24 animate-[slide_15s_linear_infinite]"
  />

  <!-- Semi-transparent gradient overlay for readability -->
  <div
    class="absolute inset-0 bg-gradient-to-r from-orange-600/80 to-red-500/80"
  ></div>
  <div class="w-full max-w-md relative z-10">
    <form
      action="/login"
      method="POST"
      class="bg-white shadow-2xl rounded-2xl px-10 py-12"
    >
      <% if(messages.error) { %>
      <span class="text-red-500 text-center text-sm mb-4 block"
        ><%= messages.error %></span
      >
      <% } %>

      <h2 class="text-3xl font-extrabold text-gray-800 text-center mb-8">
        Welcome to Hyderabadi Swaad
      </h2>

      <div class="mb-6">
        <label
          class="block text-gray-700 text-sm font-semibold mb-2"
          for="email"
        >
          Email
        </label>
        <input
          name="email"
          class="shadow appearance-none border border-gray-300 rounded-full w-full py-3 px-4 text-gray-700 leading-tight focus:outline-none focus:ring-2 focus:ring-orange-400 focus:border-transparent"
          id="email"
          type="email"
          placeholder="Enter your email"
        />
      </div>

      <div class="mb-6">
        <label
          class="block text-gray-700 text-sm font-semibold mb-2"
          for="password"
        >
          Password
        </label>
        <input
          name="password"
          class="shadow appearance-none border border-gray-300 rounded-full w-full py-3 px-4 text-gray-700 mb-3 leading-tight focus:outline-none focus:ring-2 focus:ring-orange-400 focus:border-transparent"
          id="password"
          type="password"
          placeholder=""
        />
        <p class="text-xs text-gray-500 mt-1">* Minimum 8 characters</p>
      </div>

      <div class="flex items-center justify-between mb-6">
        <button
          class="w-full bg-orange-500 hover:bg-orange-600 text-white font-bold py-3 px-4 rounded-full transition duration-200 focus:outline-none focus:ring-2 focus:ring-orange-300 focus:ring-offset-2"
          type="submit"
        >
          Log In & Order
        </button>
      </div>

      <div class="text-center mb-4">
        <a
          class="inline-block align-baseline font-semibold text-sm text-orange-600 hover:text-orange-800 transition duration-200"
          href="/forgot-password"
        >
          Forgot Password?
        </a>
      </div>

      <hr class="my-6 border-gray-300 w-full" />

      <div class="text-center">
        <a
          class="inline-block align-baseline font-semibold text-sm text-gray-700"
          href="/register"
        >
          Don't have an account?
          <span class="text-orange-600 hover:text-orange-800">Sign Up</span>
        </a>
      </div>
    </form>
  </div>
</section>

<style>
  @keyframes slide {
    0% {
      transform: translateX(-100%);
    }
    100% {
      transform: translateX(200%);
    }
  }
</style>
